<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="0dip" android:layout_weight="1"
		android:paddingTop="0dip" android:paddingLeft="0dip"
		android:paddingRight="0dip" android:orientation="vertical">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="1"
			android:orientation="vertical">
			<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="1"
			android:orientation="vertical" android:gravity="center">
				<ToggleButton android:id="@+id/toggle_activate_button"
					android:layout_gravity="center_horizontal"
					android:gravity="center_vertical"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textOn=""
					android:textOff=""
					android:background="@drawable/toggle_switch"
					android:checked="true"/>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="2"
			android:orientation="vertical">
			<TextView android:id="@+id/help_text" android:layout_width="fill_parent"
				android:gravity="center_vertical|center_horizontal"
				android:textSize="12pt" android:layout_height="wrap_content"
				android:text="@string/help_text" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>